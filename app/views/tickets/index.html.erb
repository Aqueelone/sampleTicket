<div class="page-header">
  <h1>
    List of tickets
  </h1>
    <%= bootstrap_icon_link_to 'New Ticket', new_ticket_path, "icon-plus icon-white", :class => "button btn btn-success right" %>
  </div>

<%= show_flash %>

<table role="grid" class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th  scope="column">Status</th>  
    <th  scope="column">Category</th>
    <th  scope="column">Title</th>
    <th  scope="column">Feedback by</th>
  </tr>
  </thead>
  <tbody>
<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket_status_label link_to ticket.ticket_status.name, ticket.ticket_status %></td>
    <td><%= link_to ticket.category.name, ticket.category %></td>
    <td><%= link_to ticket.title, ticket %></td>
    <td><%= link_to ticket.user.name, ticket.user %></td>
  </tr>
<% end %>
</tbody>
</table>