<div class="page-header">
    <h1>
        Ticket Details    
    </h1>
    <% if user_signed_in? %>
      <% if current_user.is_admin || current_user.is_moderator %>
        <% if current_user.is_admin %>
          <%= bootstrap_icon_link_to 'Delete', @ticket, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-danger right" %>
        <% end %>
        <%= bootstrap_icon_link_to 'Edit', edit_ticket_path(@ticket), "icon-pencil icon-white", :class => "button btn btn-primary right" %>
      <% end %>
      <% if @ticket.user_id == current_user.id %>
        <%= bootstrap_icon_link_to 'Edit', edit_ticket_path(@ticket), "icon-pencil icon-white", :class => "button btn btn-primary right" %>
      <% end %>
    <% end %>
    <%= bootstrap_icon_link_to 'New Ticket', new_ticket_path, "icon-plus icon-white", :class => "button btn btn-success right" %>
</div>

<table class="table table-striped table-bordered table-condensed">
    <tbody>
        <tr>
            <td class="top"><b>Ticket #:</b></td>
            <td><%=@ticket.category.id%><%= @ticket.id%>-<%=@ticket.category.name %> </td>
        </tr>
        <tr>
            <td class="top"><b>Status:</b></td>
            <td><%= ticket_status_label @ticket.ticket_status.name %></td>
        </tr>
        <tr>
            <td class="top"><b>Category:</b></td>
            <td><%= @ticket.category.name %></td>
        </tr>
        <tr>
            <td class="top"><b>Feedback by:</b></td>
            <td><%= @ticket.user.name %></td>
        </tr>
        <tr>
            <td class="top"><b>Title:</b></td>
            <td><%= @ticket.title %></td>
        </tr>
        <tr>
            <td class="top"><b>Created:</b></td>
            <td><%= @ticket.created_at %></td>
        </tr>
        <tr>
            <td class="top"><b>Updated:</b></td>
            <td><%= @ticket.updated_at %></td>
        </tr>
        <tr>
            <td class="top"><b>Description:</b></td>
            <td><%= RedCloth.new(@ticket.description).to_html.html_safe %></td>
        </tr>
    </tbody>
</table>