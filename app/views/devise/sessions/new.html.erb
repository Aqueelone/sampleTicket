<div class="page-header"><h1><Sign>Sign In</h1></div>

<%= show_flash %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>    
  <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
  </div>
  <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    </div>
  <% end -%>
  <div class="form-actions">
      <%= f.submit "Sign in", :class => "button btn btn-success"  %><br />
      <%= render :partial => "devise/shared/links" %>
  </div>
<% end %>
