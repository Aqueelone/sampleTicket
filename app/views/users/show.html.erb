<div class="page-header">
    <h1>
        User: <%= @user.name %>
    </h1>
    <%= bootstrap_icon_link_to 'New User', new_user_path, "icon-plus icon-white", :class => "button btn btn-success  right" %>
</div>

<%= show_flash %>

<fieldset>
    <legend>Profile of <%= @user.name %>:</legend>
    <table role="grid" class="table table-striped table-bordered table-condensed">
        <tr><td  scope="row">Name</td>
            <td>
                <%= @user.name %>
                <% if @user.is_admin %>
                  <span class="label label-info">Admin</span>
                <% end %>
                <% if @user.is_moderator %>
                  <span class="label label-info">Moderator</span>
                <% end %>
            </td>
        </tr>
        <tr><td  scope="row">Email</td><td><%= @user.email %></td></tr>
        <tr><td  scope="row">Current SignIn at</td><td><%= @user.current_sign_in_at %></td></tr>
        <tr><td  scope="row">Last SignIn at</td><td><%= @user.last_sign_in_at %></td></tr>   
        <tr><td  scope="row">Current SignIn IP</td><td><%= @user.current_sign_in_ip %></td></tr>
        <tr><td  scope="row">Last SignIn IP</td><td><%= @user.last_sign_in_ip %></td></tr>
        <tr><td  scope="row">Tickets</td><td><%= @user.tickets.count %></td></tr>
        <tr><td  scope="row">SignInCount</td><td><%= @user.sign_in_count %></td></tr>
        <tr><td  scope="row"></td><td>
                <%= bootstrap_icon_link_to 'Edit', edit_user_path(@user), "icon-pencil icon-white", :class => "button btn btn-small btn-primary" %>
                <%= bootstrap_icon_link_to 'Delete', @user, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-small btn-danger" %>
            </td></tr>
    </table>
</fieldset>

<fieldset>
    <legend>Tickets of <%= @user.name %>:</legend>
    <table role="grid" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th  scope="column">Status</th>    
                <th  scope="column">Category</th>
                <th  scope="column">Title</th>
                <th  scope="column">Feedback by</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @tickets.each do |ticket| %>
              <tr>
                  <td><%= ticket_status_label ticket.ticket_status.name %></td>
                  <td><%= ticket.category.name %></td>
                  <td><%= link_to ticket.title, ticket %></td>
                  <td><%= ticket.user.name %></td>
                  <td>
                      <%= bootstrap_icon_link_to 'Edit', edit_ticket_path(ticket), "icon-pencil icon-white", :class => "button btn btn-small btn-primary" %>
                      <%= bootstrap_icon_link_to 'Delete', ticket, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-small btn-danger" %>
                  </td>
              </tr>
            <% end %>
        </tbody>
    </table>
</fieldset>