<div class="page-header">
    <h1>
        Widget Rule: <%=  @widget_rule.allow ? "allow" : "deny" %> <%= @widget_rule.controlled.name %>
    </h1>
      <%= bootstrap_icon_link_to 'New Widget Rule', new_widget_rule_path, "icon-plus icon-white", :class => "button btn btn-success  right" %>
      <%= bootstrap_icon_link_to 'Edit', edit_widget_rule_path(@widget_rule), "icon-pencil icon-white", :class => "button btn btn-small btn-primary" %>
      <%= bootstrap_icon_link_to 'Delete', @widget_rule, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-small btn-danger" %>
</div>

<%= show_flash %>

<table role="grid" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Type</th>
            <th>Controlled</th>
            <th>Tickets</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
          <tr>
              <td><span class="label label-info"><%= @widget_rule.allow ? "allow" : "deny" %></span></td>
              <td><%= @widget_rule.controlled_type %></td>
              <td><%= link_to @widget_rule.controlled.name, @widget_rule.controlled %></td>
              <td><%= @widget_rule.controlled.tickets.count %></td>
              <td>
                  <%= bootstrap_icon_link_to 'Edit', edit_widget_rule_path(@widget_rule), "icon-pencil icon-white", :class => "button btn btn-small btn-primary" %>
                  <%= bootstrap_icon_link_to 'Delete', @widget_rule, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-small btn-danger" %>
              </td>
          </tr>
    </tbody>
</table>