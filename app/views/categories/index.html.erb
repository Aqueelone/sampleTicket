<div class="page-header">
    <h1>
        List of categories
    </h1>
    <%= bootstrap_icon_link_to 'New Category', new_category_path, "icon-plus icon-white", :class => "button btn btn-success  right" %>
</div>

<%= show_flash %>

<fieldset>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Tickets</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
              <tr>
                  <td><%= category.name %></td>
                  <td><%= category.tickets.count %></td>
                  <td>
                      <%= bootstrap_icon_link_to 'Show', category, "icon-show icon-white", method: :get, :class => "button btn btn-small btn-primary" %>
                      <%= bootstrap_icon_link_to 'Edit', edit_category_path(category), "icon-pencil icon-white", :class => "button btn btn-small btn-primary" %>
                      <%= bootstrap_icon_link_to 'Delete', category, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-small btn-danger" %>
                  </td>
              </tr>
            <% end %>
        </tbody>
    </table>
</fieldset>
