<div class="page-header">
  <h1>
    Category: <%= @category.name %>
  </h1>
    <%= bootstrap_icon_link_to 'New Category', new_category_path, "icon-plus icon-white", :class => "button btn btn-success  right" %>
    <%= bootstrap_icon_link_to 'Edit', edit_category_path(@category), "icon-pencil icon-white", :class => "button btn btn-small btn-primary" %>
    <%= bootstrap_icon_link_to 'Delete', @category, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-small btn-danger" %>
</div>

<%= show_flash %>

<table role="grid" class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th  scope="column">Status</th>
    <th  scope="column">Title</th>
    <th  scope="column">Feedback by</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket_status_label ticket.ticket_status.name %></td>
    <td><%= link_to ticket.title, ticket %></td>
    <td><%= ticket.user.name %></td>
    <td>
      <%= bootstrap_icon_link_to 'Edit', edit_ticket_path(ticket), "icon-pencil icon-white", :class => "button btn btn-small btn-primary" %>
      <%= bootstrap_icon_link_to 'Delete', ticket, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "button btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>